@model ContratacaoNutricionistasWEB.Models.Nutricionista.NutricionistaAlteracaoVM

<h4>Alteração de dados</h4>
<hr />
@if (ViewData[Constantes.ViewDataMensagemErro] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 alert alert-danger">
                <span>
                    @ViewData[Constantes.ViewDataMensagemErro].ToString()
                </span>
            </div>
        </div>
    </div>
}

@if (ViewData[Constantes.ViewDataMensagemRetorno] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 alert alert-success">
                <span>
                    @ViewData[Constantes.ViewDataMensagemRetorno].ToString()
                </span>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AlterarDados" asp-controller="Nutricionista" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ID" />
            <input hidden asp-for="Login" />
            <input hidden asp-for="Senha" value="@Model.Senha"/>
            <input hidden asp-for="SenhaConfirmacao" value="@Model.SenhaConfirmacao"/>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CRN" class="control-label"></label>
                <input asp-for="CRN" class="form-control" />
                <span asp-validation-for="CRN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-warning form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Voltar para página inicial</a>
</div>

