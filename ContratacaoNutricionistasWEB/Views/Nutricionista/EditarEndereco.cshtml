@model ContratacaoNutricionistasWEB.Models.Nutricionista.EnderecoAlteracaoVM

@{
    ViewData["Title"] = "Alteração de endereço de trabalho";
}

<h4>@ViewData["Title"]</h4>
<hr />
@if (ViewData[Constantes.ViewDataMensagemErro] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 alert alert-danger">
                <span>
                    @ViewData[Constantes.ViewDataMensagemErro].ToString()
                </span>
            </div>
        </div>
    </div>
}

@if (ViewData[Constantes.ViewDataMensagemRetorno] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 alert alert-success">
                <span>
                    @ViewData[Constantes.ViewDataMensagemRetorno].ToString()
                </span>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditarEndereco" asp-controller="Nutricionista">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ID" />
            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
                <span id="spanCEP" hidden class="text-danger">CEP não encontrado</span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" readonly class="form-control" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" min="0" max="999999999" maxlength="9" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" readonly class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" readonly class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" readonly class="form-control" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnCadastrar" type="submit" value="Alterar dados" class="btn btn-warning form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="EnderecosCadastrados" asp-controller="Nutricionista">Voltar para a lista de endereços</a>
</div>

@section Scripts{
    <script type="text/javascript">
        var urlCadastrarCEP = "@Url.Action("ConsultarEnderecoCEP","Nutricionista")"
    </script>
    <script src="~/js/Nutricionista/buscarEnderecoPorCEP.js"></script>
    <script src="~/js/Nutricionista/alteracaoEndereco.js"></script>
}
