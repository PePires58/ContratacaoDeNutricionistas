@model ContratacaoNutricionistasWEB.Models.Paciente.PacienteAlteracaoVM
@{
    ViewData["Title"] = "Alteração de dados";
}
<div class="col s12">
    <h4>@ViewData["Title"]</h4>
    <hr />
</div>

<partial name="_MensagemErro" />
<partial name="_MensagemSucesso" />

<div class="row">
    <form asp-action="AlterarDados" asp-controller="Paciente">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="ID" />
        <input hidden asp-for="Login" />
        <input hidden asp-for="Senha" value="@Model.Senha" />
        <input hidden asp-for="SenhaConfirmacao" value="@Model.SenhaConfirmacao" />

        <div class="form-group input-field">
            <i class="material-icons prefix">account_circle</i>
            <input asp-for="Nome" class="form-control" />
            <label asp-for="Nome" class="control-label"></label>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group input-field">
            <i class="material-icons prefix">phone</i>
            <input asp-for="Telefone" class="form-control" />
            <label asp-for="Telefone" class="control-label"></label>
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Editar" class="btn btn-warning form-control" />
        </div>
    </form>
</div>
<div class="col s12">
    <a asp-action="Index" asp-controller="Home">Voltar para página inicial</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Usuario/telefoneCelMask.js"></script>
}
